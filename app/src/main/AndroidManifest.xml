<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.ThankYouActivity"></activity>
        <activity android:name=".controller.ShippingActivity" />
        <activity android:name=".controller.PayOptionActivity" />
        <activity android:name=".controller.RegistrationActivity" />
        <activity android:name=".controller.LoginActivity" />
        <activity android:name=".controller.EditCartActivity" />
        <activity android:name=".controller.AdaptorCart" />
        <activity android:name=".controller.CartActivity" />
        <activity
            android:name=".controller.ProductDetailActivity"
            android:label="@string/title_activity_product_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.AdaptorProduct"
            android:label="@string/title_activity_adaptor_product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.AdaptorSubCategory"
            android:label="@string/title_activity_adaptor_sub_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.AdaptorCategory"
            android:label="@string/title_activity_adaptor_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.ProductActivity"
            android:label="@string/title_activity_product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.SubCategoryActivity"
            android:label="@string/title_activity_sub_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>